  </changeSet>

  <changeSet id="bulk-update-example-data" author="kdergachev">
    <loadData tableName="BULK_UPDATE_EXAMPLE" separator=";" quotchar="&quot;"
              file="db/migration/liquibase/data/latest/csv/BULK_UPDATE_EXAMPLE.csv">
      <column header="ID" name="ID" type="NUMERIC"/>
      <column header="NAME" name="name" type="STRING"/>
      <column header="DESC" name="description" type="STRING"/>
    </loadData>
  </changeSet>

  <changeSet id="file-entity-postgres" author="kdergachev">
    <sql>
      ALTER TABLE FILE_ENTITY ALTER COLUMN IS_TEMPORARY DROP DEFAULT;
      ALTER TABLE FILE_ENTITY ALTER IS_TEMPORARY TYPE bool USING CASE WHEN IS_TEMPORARY=0 THEN FALSE ELSE TRUE END;
      ALTER TABLE FILE_ENTITY ALTER COLUMN IS_TEMPORARY SET DEFAULT FALSE;
      ALTER TABLE FILE_ENTITY ALTER COLUMN RESTRICTED_FLG DROP DEFAULT;
      ALTER TABLE FILE_ENTITY ALTER RESTRICTED_FLG TYPE bool USING CASE WHEN RESTRICTED_FLG=0 THEN FALSE ELSE TRUE END;
      ALTER TABLE FILE_ENTITY ALTER COLUMN RESTRICTED_FLG SET DEFAULT FALSE;
    </sql>
  </changeSet>

